

.c-details-title
	text-align: center
	margin-bottom: 3rem

.c-details-data
	color: $base-text-color-bold
	& i
		font-style: normal
		font-weight: 500
		color: $base-color

input.hide
	display: none

/*=================================
============== Index ==========
=================================*/
.c-container
	display: flex
	justify-content: space-between
	& .c-left .h2
		text-align: center
		margin-bottom: 2rem
$grosor = 2px
ul.c-header__panel
	& li
		border-radius: 100px
		margin: 3px
		border: $grosor solid #39FF9A
		text-align: center
		margin-bottom: 3rem
		& a, label
			line-height: 34px
			font-size: $text-size.normal-3
			display: inline-block
			height: 100%
			padding: .2rem 1.5rem
			font-weight: 500
			cursor: pointer
		&:hover
			transition: .5s ease
			background: rgba(#39FF9A 0.13)
		& i
			vertical-align: middle
			padding-left: 1rem
			color: $base-text-color-bold
.c-right
	width: 70%
	margin-left: 30px
	display: grid
	text-align: center
	grid-template-rows: 19%
	grid-row-gap: 7px
	grid-column-gap: 2px
	& .h2
		grid-column: 1/4
		align-self: center
	& .p, .h3
		display: flex
		flex-direction: column
		justify-content: center
		border: solid 2px #9039FF
		border-radius: 10px
		font-size: $text-size.normal
.c-capacity
	padding: 2rem
	.h1
		text-align: center
.number
	color: #39FF9A
/*=================================
============== ^End Index ==========
=================================*/
